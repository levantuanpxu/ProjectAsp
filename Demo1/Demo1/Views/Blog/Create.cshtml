@model BlogCreateVM
@{
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<form method="post" enctype="multipart/form-data">
    <div class="border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group row">
            <h2 class="text-info">Add Blog</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Blog.Title"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="Blog.Title" class="form-control" />
                        <span asp-validation-for="Blog.Title" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Blog.Short_content"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Blog.Short_content" class="form-control"></textarea>
                        <span asp-validation-for="Blog.Short_content" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Blog.Full_content"></label>
                    </div>
                    <div class="col-8">
                        <textarea asp-for="Blog.Full_content" class="form-control"></textarea>
                        <span asp-validation-for="Blog.Full_content" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        Image
                    </div>
                    <div class="col-8">
                        <input type="file" name="files" value="" class="form-control" id="uploadBox" />
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-4">
                        <label asp-for="Blog.CategoryId"></label>
                    </div>
                    <div class="col-8">
                        <select asp-for="Blog.CategoryId" asp-items="@Model.CategorySelectList" class="form-control">
                            <option disabled selected>Vui lòng chọn Category</option>
                        </select>
                        <span asp-validation-for="Blog.Short_content" class="text-danger"></span>
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col">
                        <input type="submit" value="Create" class="btn btn-info" onclick="return validateInput()" />
                    </div>
                    <div class="col">
                        <a asp-action="Index" class="btn btn-success">Back</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

</form>

@section ScriptsValidate {
    <script>
        function validateInput() {
            console.log(document.getElementById("uploadBox").value);
            if (document.getElementById("uploadBox").value == "") {
                Swal.fire(
                    'Error!',
                    'Please upload an Image!',
                    'error'
                )
                return false;
            }
            return true;
        }
    </script>
}